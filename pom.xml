<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.cj.restspecs</groupId>
	<artifactId>rest-specs-pom</artifactId>
	<version>7.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>${project.artifactId}</name>

	<modules>
		<module>core</module>
		<module>mockrunner</module>
		<module>mojo</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<target>1.5</target>
					<source>1.5</source>
				</configuration>
			</plugin>
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<configuration>
					<header>header.txt</header>
					<strictCheck>true</strictCheck>
					<excludes>
	                    <exclude>**/*.js</exclude>
	                    <exclude>**/*.json</exclude>
	                    <exclude>**/*.css</exclude>
	                    <exclude>**/*.who</exclude>
	                    <exclude>**/*.html</exclude>
	                </excludes>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

<distributionManagement>
  <snapshotRepository>
    <id>the-deploy-plugin-makes-me-put-somethign-here-${project.artifactId}</id>
    <name>the-deploy-plugin-makes-me-put-somethign-here-${project.artifactId}</name>
    <url>scp://the/deploy/plugin/makes/me/put/something/here/${project.artifactId}</url>
  </snapshotRepository>
</distributionManagement>


</project>
